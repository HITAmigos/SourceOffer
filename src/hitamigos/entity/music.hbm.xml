<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity.assistantEntity">

<class name="music" polymorphism="explicit">
	<id name="id">
		<generator class="increment" ></generator>
	</id>
	<property name="title" 		type="string"	column="title" 	   ></property>
	<property name="link" 		type="string"	column="link" 	   ></property>
	<property name="type" 		type="int" 		column="type" 	   ></property>
</class>

</hibernate-mapping>